<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ssaxena36.quizzer.RecruiterProfile">
    <include layout="@layout/toolbar"/>
    <ScrollView
        android:layout_marginTop="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardElevation="2dp"
            app:cardCornerRadius="4dp"
            app:cardPreventCornerOverlap="true"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/one"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:id="@+id/background"
                        android:alpha="0.4"
                        android:scaleType="fitXY"
                        android:layout_height="180dp" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="65dp"
                        app:civ_border_width="1dp"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/passport"
                        android:layout_centerHorizontal="true"
                        app:civ_border_color="#000000"
                        android:layout_height="65dp"
                        android:id="@+id/passport"
                        android:layout_marginBottom="15dp"
                        />
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:id="@+id/myname"
                        android:textColor="#000000"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/passport"
                        android:layout_height="wrap_content"/>
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:text="shubh3695@gmail.com"
                        android:id="@+id/myemail"
                        android:textColor="#000000"
                        android:layout_below="@id/myname"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <!--<View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#000000"
                    android:layout_marginBottom="5dp"
                    /> -->
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:id="@+id/two"
                    android:weightSum="2"
                    android:paddingTop="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="17dp"
                        android:text="Email"
                        android:id="@+id/emailHeader"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/myemail2"
                        android:gravity="end"
                        android:layout_marginEnd="17dp"
                        android:text="shubh3695@gmail.com"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:id="@+id/three"
                    android:weightSum="2"
                    android:onClick="fullName"
                    android:paddingTop="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    tools:ignore="OnClick">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="17dp"
                        android:text="Full Name"
                        android:id="@+id/nameHeader"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/myname2"
                        android:gravity="end"
                        android:layout_marginEnd="17dp"
                        android:text="Shubham Saxena"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:id="@+id/four"
                    android:weightSum="2"
                    android:onClick="cityChanger"
                    android:paddingTop="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="17dp"
                        android:text="City"
                        android:id="@+id/cityHeader"
                        android:layout_height="wrap_content" />
                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/mycity"
                        android:gravity="end"
                        android:layout_marginEnd="17dp"
                        android:text="Lucknow"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="1dp"
                    android:background="#adabab"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:weightSum="1"
                    android:onClick="experienceAdder"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/briefcase"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/expHeader"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/exp"
                            android:textStyle="italic"                       android:layout_marginTop="2dp"
                            android:text="2 years"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="15dp"
                    android:background="#adabab"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:weightSum="1"
                    android:onClick="ctcChanger"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/money"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/moneyHeader"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/money"
                            android:textStyle="italic"
                            android:layout_marginTop="2dp"
                            android:text="2.5 L"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="15dp"
                    android:background="#adabab"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:weightSum="1"
                    android:onClick="detailsChanger"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/test"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/detailsHeader"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/detail"
                            android:textStyle="italic"
                            android:layout_marginTop="2dp"
                            android:text="95%"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="15dp"
                    android:background="#adabab"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:weightSum="1"
                    android:onClick="websiteChanger"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/website"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/websiteHeader"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/website"
                            android:textStyle="italic"
                            android:layout_marginTop="2dp"
                            android:text="www.google.com"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="15dp"
                    android:background="#adabab"
                    android:layout_height="1dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:paddingBottom="9dp"
                    android:paddingTop="9dp"
                    android:weightSum="1"
                    android:onClick="phoneChanger"
                    android:foreground="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.8"
                        android:layout_height="match_parent">
                        <android.support.v7.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/test"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.2"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/phoneHeader"
                            android:layout_height="wrap_content" />
                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/phone"
                            android:textStyle="italic"
                            android:layout_marginTop="2dp"
                            android:text="95%"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--
            Skills and Resume Upload TextInputLayout
            -->
        </android.support.v7.widget.CardView>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
